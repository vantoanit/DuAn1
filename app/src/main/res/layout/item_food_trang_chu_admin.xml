<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DFF8EF">
        <ImageView
            android:id="@+id/img_food_admin"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/img_bap_cai_trang_chu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtNameFoodAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rau cải bắp"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:padding="5dp"
                    android:fontFamily="serif"/>
                <TextView
                    android:id="@+id/txtPriceFoodAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17.000 VND/ 1 Kg"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:textSize="9dp"
                    android:paddingTop="5dp"
                    android:fontFamily="serif"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/ic_edit_food_admin"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_edit_trang_chu"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>