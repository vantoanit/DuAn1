<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi, Nguyễn Văn Anh"
                    android:fontFamily="serif"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/tvNameTrangChuUser"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hôm nay bạn sẽ mua gì ?"
                    android:fontFamily="serif"
                    android:textSize="12sp"
                    />
            </LinearLayout>


        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/edTimKiemTrangChu"

            android:hint="Tìm kiếm.........."
            android:fontFamily="serif"
            android:background="@drawable/custom_edittext_trang_chu_user"
            android:padding="16dp"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:drawableStart="@drawable/icon_seach"
            android:drawablePadding="10dp"
            android:elevation="3dp"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại thực phẩm"
                        android:fontFamily="serif"
                        android:textStyle="bold"


                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Xem thêm"
                        android:fontFamily="serif"
                        android:gravity="right"
                        android:textColor="#52FF4E"
                        android:id="@+id/tvXemThem"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="4"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:id="@+id/layoutRauTrangChuUser"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:orientation="vertical"
                        android:background="@drawable/custom_item_loai_san_pham"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/img_bong_cai_xanh"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loại rau"
                            android:gravity="center"
                            android:fontFamily="serif"
                            android:textSize="12sp"
                            android:layout_marginTop="3dp"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutQuaTrangChuUser"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:orientation="vertical"
                        android:background="@drawable/custom_item_loai_san_pham"
                        android:gravity="center"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/img_dau_tay"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loại quả"
                            android:gravity="center"
                            android:fontFamily="serif"
                            android:textSize="12sp"
                            android:layout_marginTop="3dp"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutCuTrangChuUser"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:orientation="vertical"
                        android:background="@drawable/custom_item_loai_san_pham"
                        android:gravity="center"
                        android:layout_marginEnd="8dp"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/img_ca_rot"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loại củ"
                            android:gravity="center"
                            android:fontFamily="serif"
                            android:textSize="12sp"
                            android:layout_marginTop="3dp"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutHatTrangChuUser"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:orientation="vertical"
                        android:background="@drawable/custom_item_loai_san_pham"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/img_loai_hat"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loại hạt"
                            android:gravity="center"
                            android:fontFamily="serif"
                            android:textSize="12sp"
                            android:layout_marginTop="3dp"
                            />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    >

                    <androidx.viewpager2.widget.ViewPager2
                        android:layout_width="match_parent"
                        android:layout_height="170dp"

                        android:id="@+id/viewPager2TrangChuUser"
                        android:paddingEnd="100dp"
                        tools:ignore="RtlSymmetry" />
                    <me.relex.circleindicator.CircleIndicator3
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ci3"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thực phẩm phổ biến"
                        android:fontFamily="serif"
                        android:textStyle="bold"


                        />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/rcvTrangChuUser"

                    />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>





    </LinearLayout>

</LinearLayout>