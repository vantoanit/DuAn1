<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="15dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên đăng nhập"
            android:fontFamily="serif"
            android:drawableStart="@drawable/icon_ten_tai_khoan_login_sigup"
            android:drawablePadding="10dp"
            android:background="@drawable/custom_edittext_login_sigup"
            android:padding="20dp"
            android:id="@+id/edTenDangNhapLogin"/>


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu"
            android:fontFamily="serif"
            android:drawableStart="@drawable/icon_mat_khau_login_sigup"
            android:drawablePadding="10dp"
            android:background="@drawable/custom_edittext_login_sigup"
            android:inputType="textPassword"
            android:padding="20dp"
            android:id="@+id/edMatKhauLogin"/>


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu"
        android:fontFamily="serif"
        android:gravity="right"
        android:layout_marginEnd="14dp"
        android:textColor="#535050"
        android:id="@+id/tvQuenMatKhau"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/btnLogin"

        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Đăng nhập"
        android:fontFamily="serif"
        android:background="@drawable/custom_btn_login_sigup"
        android:padding="18.5dp"
        android:textColor="#fff"
        android:textStyle="bold"
        />


</LinearLayout>