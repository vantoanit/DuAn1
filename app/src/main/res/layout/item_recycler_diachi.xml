<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_lien_he"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_ten_dia_chi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"/>




                <TextView
                    android:id="@+id/txt_phone_dia_chi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#939393"
                    android:layout_marginStart="5dp"/>




                <TextView
                    android:id="@+id/txt_dia_chi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#939393"
                    android:layout_marginStart="5dp"/>




        </LinearLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCapNhatDiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cập nhật địa chỉ"
            android:fontFamily="serif"
            android:background="@drawable/cusstom_btn"/>
    </LinearLayout>



</androidx.cardview.widget.CardView>