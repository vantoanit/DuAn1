<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0F3ED"
        android:id="@+id/mytoolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif"
            android:text="Thống kê"
            android:textSize="20dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_lien_he"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="45dp"
        android:layout_below="@id/mytoolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="serif"
            android:text="Thống kê doanh thu"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="serif"
            android:text="Ngày bắt đầu"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edtNgayBatDau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_editttext_themsp"
            android:hint="Nhập ngày bắt đầu"
            android:padding="20dp"
            android:fontFamily="serif"
            android:focusable="false"
            android:clickable="false"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="Ngày kết thúc"
            android:textSize="17sp"
            />

        <EditText
            android:id="@+id/edtNgayKetThuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_editttext_themsp"
            android:hint="Nhập ngày kết thúc"
            android:padding="20dp"
            android:fontFamily="serif"
            android:focusable="false"
            android:clickable="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDoanhThu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background_doi_pass"
            android:text="Thống kê doanh thu"
            android:fontFamily="serif"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bacground_doanh_thu"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="15dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Doanh thu : "
                android:textSize="17sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtKetQua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mytoolbar"
        android:gravity="center"
        android:elevation="10dp"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/img_logo_app"
            android:adjustViewBounds="true"
            android:elevation="20dp"
            />

    </LinearLayout>



</RelativeLayout>